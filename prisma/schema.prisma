generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(uuid()) @db.Uuid
  email         String        @unique
  firstName     String?
  lastName      String?
  phone         String?
  dateOfBirth   DateTime?
  profileImage  String?
  addresses     Address[]
  wishlist      Product[]
  cart          CartItem[]
  // orders?: Order[];
  walletBalance Int?
  isAdmin       Boolean?
  isEmployee    Boolean?
  employeeRole  EmployeeRole?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  deletedAt     DateTime?
}

model Address {
  id        String    @id @default(uuid()) @db.Uuid
  address   String?
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?   @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model CartItem {
  id        String    @id @default(uuid()) @db.Uuid
  productId String?
  quantity  String?
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?   @db.Uuid
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

enum EmployeeRole {
  CALL_CENTER
  PACKER
  WARE_HOUSE
  DELIVERY_MAN
  INCHARGE
  ACCOUNTS
}

model Category {
  id          String    @id @default(uuid()) @db.Uuid
  title       String?
  slug        String?
  description String?
  range       Int?
  featured    Boolean?
  imageUrl    String
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model Product {
  id                 String               @id @default(uuid()) @db.Uuid
  name               String?
  slug               String?
  images             ProductImage[]
  description        String?
  price              Int?
  discount           Int?
  categoryId         String?              @db.Uuid
  category           Category?            @relation(fields: [categoryId], references: [id])
  stock              Int?
  status             ProductStatus?
  isFeatured         Boolean?
  averageRating      Int?
  totalReviews       Int?
  ratingDistribution RatingDistribution[]
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  deletedAt          DateTime?
  user               User?                @relation(fields: [userId], references: [id])
  userId             String?              @db.Uuid
}

enum ProductStatus {
  NEW
  HOT
  SALE
}

model ProductImage {
  id        Int       @id @default(autoincrement())
  url       String?
  alt       String?
  productId String    @db.Uuid
  product   Product   @relation(fields: [productId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?
}

model RatingDistribution {
  id         Int       @id @default(autoincrement())
  fiveStars  Int?
  fourStars  Int?
  threeStars Int?
  twoStars   Int?
  oneStar    Int?
  productId  String    @db.Uuid
  product    Product   @relation(fields: [productId], references: [id])
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deletedAt  DateTime?
}
